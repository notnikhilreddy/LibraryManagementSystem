@model IEnumerable<PracticeWebApi.Models.Library>

@{
    ViewData["Title"] = "Admin";
    int index = 1;
}

<h1>Please select a library</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Index
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocationId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @(index++)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationId)
            </td>
            <td>
                @Html.ActionLink("Select", "ListBooks", "Admin", new { id = item.LibraryId})
                @*@<a asp-action="Select" asp-route-id="@item.LibraryId" >Select</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
