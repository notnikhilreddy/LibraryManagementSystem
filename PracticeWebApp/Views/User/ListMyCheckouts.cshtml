@model IEnumerable<PracticeWebApi.Models.BookWithDuedate>

@{
    ViewData["Title"] = "ListMyCheckouts";
    int index = 1;
}

<h1>My Checkouts</h1>

<p>
    @Html.ActionLink("All Books", "ListBooks", "User", new { id = PracticeWebApp.Controllers.Statics.userId})
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Index
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DueDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @(index++)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DueDate)
            </td>
            <td>
                @Html.ActionLink("Return Book", "Return", "User", new { bookId = item.BookId })
            </td>
        </tr>
}
    </tbody>
</table>
